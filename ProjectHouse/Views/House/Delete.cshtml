@model ProjectHouse.Models.House.HouseDeleteViewModel

<h1>Delete</h1>

<div>
    <h4>Houses</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Id)
        </div>

        <div class="form-group row">
            <label asp-for="Size" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Size)
        </div>

        <div class="form-group row">
            <label asp-for="NumberOfFloors" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.NumberOfFloors)
        </div>

        <div class="form-group row">
            <label asp-for="NumberOfBathrooms" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.NumberOfBathrooms)
        </div>

        <div class="form-group row">
            <label asp-for="NumberOfBedrooms" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.NumberOfBedrooms)
        </div>

        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CreatedAt)
        </div>

        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ModifiedAt)
        </div>
    </dl>
</div>
<hr />
<form asp-action="DeleteConfirmation">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" asp-controller="house" class="btn btn-success">Back</a>
</form>